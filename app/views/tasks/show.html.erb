<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <input type="checkbox" checked>
  This task is already completed.
<% else %>
  <input type="checkbox" >
  This task is not yet completed.
<% end %>
<p><%= link_to "Edit task", edit_task_path %></p>
<p><%= link_to "Remove task", remove_task_path(@task),  method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<hr>
<%= link_to "Back to task list", tasks_path %>
